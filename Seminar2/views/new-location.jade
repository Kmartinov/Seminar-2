extends master-template
block content
  .container
    ol.breadcrumb
      li
        a(href='dashboard.html') Administracija
      li
        a(href='dashboard.html') Stranice
      li.active Nova stranica
    .row 
      p.lead= $flash['error']
      form(role='form', method='post', enctype='multipart/form-data')
        .col-md-8
          .form-group
            label(for='pageTitle') Naslov
            input.form-control(type='text', name='pageTitle', placeholder='Naslov stranice')
          .form-group
            label(for='pageDesc') Opis
            input.form-control(type='text', name='pageDesc', placeholder='Opis stranice')
          .form-group
            label(for='pageContent') Tekst
            textarea.form-control(rows='8', name='pageTxt')
          .panel.panel-default
            .panel-heading
              h3.panel-title Lokacija
            .panel-body
              .form-group
                input.form-control(type='text', name='lat', placeholder='Latituda')
              .form-group
                input.form-control(type='text', name='lng', placeholder='Longituda')
        .col-md-4
          .panel.panel-default
            .panel-body
              .form-group
                button.btn.btn-primary(type='submit') Objavi
          .panel.panel-default
            .panel-heading
              h3.panel-title Kategorija
            .panel-body
              .form-group
                select.form-control(name='catId')
                 option(value='') -
                 for category in categories
                  option(value='#{category['category_id']}') #{category['category_title']}
          .panel.panel-default
            .panel-heading
              h3.panel-title Slika
            .panel-body
              .form-group
                input#exampleInputFile(type='file',name='pageImg')
                p.help-block Slika naslovnice: jpg/gif do 1MB veliƒçine.