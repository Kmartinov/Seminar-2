extends master-template
block content
  .container
    ol.breadcrumb
      li
        a(href='dashboard.html') Administracija
      li
        a(href='dashboard.html') Komentar
      li.active Uređivanje
    .row
      form(role='form', method='post')
        .col-md-8
          .form-group
            label(for='comText') Tekst komentara
            textarea.form-control(name='comTxt', rows='5') #{comment['comment_text']}
        .col-md-4
          .panel.panel-default
            .panel-body
              .form-group
                button.btn.btn-primary(type='submit', name='update') Spremi
                button.btn.btn-danger(type='submit', name='delete') Obriši