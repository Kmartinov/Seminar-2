extends master-template
block content
  .container
    .col-md-12.page
      .row
        .col-md-3
          ul.nav.nav-pills.nav-stacked
            li
              a(href='#{baseUrl}/new/location') Nova stranica
            li
              a(href='#{baseUrl}/new/category') Nova kategorija
        .col-md-9
          .page-header
            h2 Statistika
            p
             | Lokacija: #{totalLocations}
            p
             | Kategorija: #{totalCategories}
            p
             | Korisnika: #{totalUsers}
          .page-header
            h2 Zadnje dodano
          .table-responsive
            table#patientTable.table.table-hover
              tr
                th ID
                th Naziv
                th Kategorija
               for item in recentLocations
                tr
                 td #{item['id']}
                 td
                   a(href='#{baseUrl}/location/#{item['id']}')
                    | #{item['name']}
                 td
                   a(href='#{baseUrl}/category/#{item['cid']}')
                    | #{item['cat']}